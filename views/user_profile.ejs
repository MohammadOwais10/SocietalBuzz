        let self = this;
        let toggleLike = new ToggleLike(self);
    })
</script>

<script>
    $('.post-date').each(function () {
        let selfdate = $(this).text();
        selfdate = selfdate.trim();
        let month = selfdate.substring(4, 7);
        let date = selfdate.substring(8, 10);
        let newDate = date + " " + month
        $(this).text(newDate)
    })
</script>